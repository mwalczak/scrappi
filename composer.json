{
    "name": "app/scrappi",
    "type": "project",
    "license": "proprietary",
    "description": "Symfony API Platform application",
    "minimum-stability": "stable",
    "prefer-stable": true,
    "require": {
        "php": ">=8.5",
        "ext-ctype": "*",
        "ext-iconv": "*",
        "api-platform/core": "^4.0",
        "doctrine/doctrine-bundle": "^3.0",
        "doctrine/doctrine-migrations-bundle": "^3.3",
        "doctrine/orm": "^3.3",
        "nelmio/cors-bundle": "^2.6",
        "ramsey/uuid": "^4.9",
        "symfony/asset": "7.4.*",
        "symfony/console": "7.4.*",
        "symfony/dotenv": "7.4.*",
        "symfony/flex": "^2",
        "symfony/framework-bundle": "7.4.*",
        "symfony/messenger": "7.4.*",
        "symfony/runtime": "7.4.*",
        "symfony/twig-bundle": "7.4.*",
        "symfony/yaml": "7.4.*"
    },
    "require-dev": {
        "dama/doctrine-test-bundle": "^8.4",
        "deptrac/deptrac": "^4.2",
        "phpstan/extension-installer": "*",
        "phpstan/phpstan": "*",
        "phpstan/phpstan-doctrine": "*",
        "phpstan/phpstan-phpunit": "*",
        "phpstan/phpstan-symfony": "*",
        "phpunit/phpunit": "^12.0",
        "symfony/browser-kit": "7.4.*",
        "symfony/css-selector": "7.4.*",
        "symfony/phpunit-bridge": "^7.4",
        "zenstruck/foundry": "^2.8"
    },
    "config": {
        "allow-plugins": {
            "php-http/discovery": true,
            "symfony/flex": true,
            "symfony/runtime": true,
            "phpstan/extension-installer": true
        },
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "App\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "auto-scripts": {
            "cache:clear": "symfony-cmd",
            "assets:install %PUBLIC_DIR%": "symfony-cmd"
        },
        "post-install-cmd": [
            "@auto-scripts",
            "@install-hooks"
        ],
        "post-update-cmd": [
            "@auto-scripts",
            "@install-hooks"
        ],
        "install-hooks": "bash .githooks/install-hooks.sh",
        "deptrac": "vendor/bin/deptrac analyze --config-file=deptrac.yaml",
        "phpstan": "vendor/bin/phpstan analyse --memory-limit=512M"
    },
    "conflict": {
        "symfony/symfony": "*"
    },
    "extra": {
        "symfony": {
            "allow-contrib": false,
            "require": "7.4.*"
        }
    }
}
